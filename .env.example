# =============================================================================
# Database (PostgreSQL + pgvector)
# =============================================================================
DATABASE__URL=postgresql+asyncpg://postgres:postgres@localhost:5432/index

# =============================================================================
# Embedding Configuration
# =============================================================================

# Provider: "voyage" | "openai" | "siliconflow" | "local"
#
# --- Voyage AI (recommended, Anthropic ecosystem) ---
EMBEDDING__PROVIDER=voyage
EMBEDDING__API_KEY=pa-xxxx
EMBEDDING__BASE_URL=https://api.voyageai.com/v1
EMBEDDING__MODEL=voyage-3.5
#
# --- OpenAI ---
# EMBEDDING__PROVIDER=openai
# EMBEDDING__API_KEY=sk-xxxx
# EMBEDDING__BASE_URL=https://api.openai.com/v1
# EMBEDDING__MODEL=text-embedding-3-small
#
# --- SiliconFlow (free tier, good for Chinese users) ---
# EMBEDDING__PROVIDER=siliconflow
# EMBEDDING__API_KEY=sk-xxxx
# EMBEDDING__BASE_URL=https://api.siliconflow.cn/v1
# EMBEDDING__MODEL=BAAI/bge-m3
#
# --- Local (no API key needed) ---
# EMBEDDING__PROVIDER=local
# EMBEDDING__MODEL=all-MiniLM-L6-v2

# =============================================================================
# Claude AI (for Chat + RAG)
# =============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Chunking Configuration
# =============================================================================
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# =============================================================================
# CORS (frontend origin)
# =============================================================================
CORS_ORIGINS=["http://localhost:5173"]
